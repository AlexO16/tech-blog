<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="post">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="posttitle" name="post" />
      </div>
      <div class="post">
        <label for="post-details">details:</label>
        <textarea class="form-input" id="postdetail" name="post2"></textarea>
      </div>
      <div class="post">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Post:</h3>

    {{#each post as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>